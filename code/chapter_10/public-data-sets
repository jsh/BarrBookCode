#!/bin/bash -eux
# illustrate using public data sets

# create an instance
zone=us-east-1b

# create a micro ec2 instance here and put its id into $instance
token=${1:-$(date +%Y-%m-%d-%H-%M)}
echo token is $token
ec2-run-instances ami-08728661 -g default -k testkey -t t1.micro -availability-zone $zone --client-token $token | tee run.OUT
instance=$( awk '/INSTANCE/{print $2}' run.OUT )

while true; do
  ec2-describe-instances | tee /dev/stderr |
    grep -q pending || break
  sleep 30
done


snap=snap753dfc1c  # the Wikipedia traffic statistics

# create a volume from the snapshot and watch its progress
ec2-create-volume -z us-east-1b -s 50 --snapshot $snap | tee create-vol.OUT
vol=$( awk '{print $2}' create.OUT )

# watch the progress
while true; do
  ec2-describe-volumes $vol | tee /dev/stderr |
    grep -q creating || break
  sleep 30
done

ec2-attach-volume $vol -i $instance -d /dev/sdh

# watch the progress
while true; do
  ec2-describe-volumes $vol | tee /dev/stderr |
    grep -q attaching || break
  sleep 30
done
